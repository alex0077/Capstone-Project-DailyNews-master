<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_search"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical|fill_horizontal"
	android:background="@drawable/widget_search"
	android:orientation="horizontal">


	<TextView
		android:id="@+id/widget_search_text"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:layout_marginStart="12dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="4dp"
		android:text="@string/widget_search"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:gravity="start|center_vertical"
		android:textColor="#DDFFFFFF"
		android:shadowColor="#44FFFFFF"
		android:shadowRadius="2"
		android:shadowDx="0"
		android:shadowDy="0"
		/>

    <ImageView
		android:id="@+id/widget_search_button"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:paddingStart="8dp"
		android:paddingEnd="12dp"
		android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:src="@drawable/action_search"
		android:contentDescription="@string/widget_search"
		/>


</LinearLayout>
